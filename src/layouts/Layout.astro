---
import Navbar from '../components/Navbar.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Web de películas</title>
	</head>
	<body>
		<div id="app" class="relative h-screen">
			<aside class="[grid-area:aside] bg-lime-400 p-4">
				Barra Menú
			</aside>
			<nav class="[grid-area:nav] bg-blue-500">
				<Navbar />
			</nav>
			<main class="[grid-area:main] bg-pink-400 p-4">
				<slot />
			</main>
			<aside class="[grid-area:fav] bg-yellow-300 p-4">
				Barra Rating
			</aside>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-width: 100vw;
		height: 100%;
		min-height: 100vh;
	}

	#app{
		display: grid;
		grid-template-areas: 
		"aside nav nav"
		"aside main fav"
		"aside main fav";
		grid-template-columns: 350px auto 250px;
		grid-template-rows: 100px 1fr auto;
	}

	@media (max-width: 700px) {
        #app {
        display: grid;
        grid-template-areas:
		  "nav nav nav"
          "aside aside aside"
          "main main main";
        grid-template-columns: 150px auto;
        grid-template-rows: 1fr auto;
      }
    }
</style>
